<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/item_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="11111"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textAppearance="@style/TextAppearance.BoldFont"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:id="@+id/item_tv_proj_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#afaeae"
                    android:textSize="11dp"
                    android:text="2018/05/24-14:25"/>

                <TextView
                    android:id="@+id/item_tv_media_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#afaeae"
                    android:textSize="11dp"
                    android:layout_marginLeft="12dp"
                    android:text="00:00:25"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/item_thumb_image"
            android:layout_width="108dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#e0e0e0"/>
</LinearLayout>