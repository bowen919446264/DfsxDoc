<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="120dp" >

    <ImageView
        android:id="@+id/imageViewFromMediaChooserGridItemRowView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="@null"
        android:scaleType="centerCrop" />

    <CheckedTextView
        android:id="@+id/checkTextViewFromMediaChooserGridItemRowView"
        android:layout_marginTop="3dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@null"
        android:layout_margin="4dp"
        android:layout_alignRight="@+id/imageViewFromMediaChooserGridItemRowView"
        android:checkMark="@drawable/selector_check"
       />

    <ImageView
            android:id="@+id/video_iocon"
            android:layout_width="24dp"
            android:layout_height="17dp"
            android:src="@drawable/video_icon_item"
            android:contentDescription="@null"
            android:visibility="gone"
            android:layout_alignBottom="@+id/imageViewFromMediaChooserGridItemRowView"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="3dp"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY" />

    <TextView
            android:id="@+id/duration_time"
            android:textColor="@color/white"
            android:textSize="12.0sp"
            android:visibility="gone"
            android:layout_alignBottom="@+id/imageViewFromMediaChooserGridItemRowView"
            android:layout_toRightOf="@+id/video_iocon"
            android:layout_marginBottom="3dp"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:text="03:04:05"
            />

</RelativeLayout>