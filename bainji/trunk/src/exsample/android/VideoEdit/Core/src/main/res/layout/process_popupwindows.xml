<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/parent" android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
>
    <LinearLayout
            android:id="@+id/ll_popup"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_process"
            android:orientation="vertical">

        <TextView android:layout_width="match_parent"
                  android:gravity="center" android:text="上传进度" android:layout_height="wrap_content"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
            <com.dfsx.core.file.processWnd.ProgressView android:id="@+id/commit_btn" android:textSize="18.0sp"
                                                        android:textColor="@color/white"
                                                        android:layout_width="match_parent" android:layout_height="30dp"
                                                        android:text="" android:gravity="center"
                                                        android:layout_centerVertical="true"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:gravity="center"
        >
            <TextView android:textSize="14.0sp" android:id="@+id/commit_title_edt"
                      android:background="@color/transparent"
                      android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1"
                      android:drawablePadding="5.0dip" android:singleLine="true"
                      android:gravity="center_horizontal"
                      android:text="1/5"
                      android:textColor="@color/logon_editr_color"
                      android:layout_centerVertical="true"/>

        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_marginTop="10dp" android:layout_height="1dp"  android:background="@color/line_color" />
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
        >

            <Button
                    android:id="@+id/popupwindows_cancel_btn"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textColor="#007aff"
                    android:textSize="15.0sp"
                    android:background="@null"
                    android:paddingLeft="10dp"
                    android:gravity="center"
                    android:text="取消"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>