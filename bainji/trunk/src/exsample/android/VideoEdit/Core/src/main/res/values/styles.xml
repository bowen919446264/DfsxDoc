<resources>

    <style name="theme.customer_progress_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:alertDialogStyle">@style/customer_progress_dialog</item>
        <item name="android:progressBarStyleSmall">@style/customer_progress_dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:paddingLeft">5dip</item>
        //图片与左边距的距离
        <item name="android:paddingRight">5dip</item>
        //message与右边距的距离
        <item name="android:textSize">15sp</item>
        //message字体的大小
        <item name="android:textColor">@android:color/white</item>
        //message字体的颜色
    </style>

    <style name="customer_progress_dialog" parent="@android:style/Widget.ProgressBar">-->
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:fullDark">@drawable/loading_nor</item>
    </style>

    <style name="TextAppearance.MediumFont" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
    </style>

    <style name="TextAppearance.BoldFont" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
    </style>

    <style name="TextAppearance.BoldCondensedFont" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Roboto-BoldCondensed.ttf</item>
    </style>
    <style name="TextAppearance.LightFont" parent="android:TextAppearance">
        <!-- Custom Attr-->
        <item name="fontPath">fonts/Roboto-Light.ttf</item>
    </style>
</resources>
