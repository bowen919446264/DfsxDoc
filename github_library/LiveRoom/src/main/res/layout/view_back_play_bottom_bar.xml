<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/bottom_tool_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/btn_play"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerInside"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_back_play_playing"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/live_chat"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_live_achor_chat"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/share"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_share"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/send_gift"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:visibility="visible"
                android:layout_marginRight="10dp"
                android:scaleType="centerInside"
                android:src="@drawable/icon_gift"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/bottom_edit_view"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#55000000">

            <EditText
                android:id="@+id/edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/btn_send"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:textSize="13sp"
                android:singleLine="true"
                android:maxLength="20"
                android:hint="说点什么吧..."
                android:textColorHint="@color/white"
                android:background="@android:color/transparent"/>

            <Button
                android:id="@+id/btn_send"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:textSize="16sp"
                android:text="发送"
                android:textColor="@color/white"
                android:background="#ea8010"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>