<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/item_bet_option_view"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:background="@drawable/bg_item_bet_option_1">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/item_logo_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitStart"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:src="@drawable/bg_bet_option_logo"/>
                <com.dfsx.core.common.view.CircleButton
                    android:id="@+id/item_logo"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_alignLeft="@+id/item_logo_bg"
                    android:layout_alignRight="@+id/item_logo_bg"
                    android:layout_alignBottom="@+id/item_logo_bg"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="9dp"
                    android:layout_marginBottom="9dp"
                    android:scaleType="centerCrop"
                    android:src="@color/red"
                />

                <TextView
                    android:id="@+id/item_bet_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:singleLine="true"
                    android:paddingTop="3dp"
                    android:paddingBottom="7dp"
                    android:layout_below="@+id/item_logo_bg"
                    android:gravity="center"
                    android:textSize="16dp"
                    android:text="lishan"
                    android:textColor="@color/white"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/bet_click_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:drawablePadding="4dp"
                    android:drawableRight="@drawable/icon_white_traight"
                    android:textSize="16dp"
                    android:text="点击竞猜"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
            >

                <TextView
                    android:id="@+id/bet_total_coins_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="23dp"
                    android:text="12345"
                    android:textColor="@color/white"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="#7fffffff"/>

                <TextView
                    android:id="@+id/user_bet_coins_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="45"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/item_bg_cover_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="#7f818181"
            android:layout_alignTop="@+id/item_bet_option_view"
            android:layout_alignBottom="@+id/item_bet_option_view"/>
    </RelativeLayout>
</LinearLayout>