<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:gravity="center">

        <RelativeLayout
            android:id="@+id/d_bg_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/bg_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bg_no_owner_live"/>

            <TextView
                android:id="@+id/btn_concern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="31dp"
                android:textColor="#6a32a1"
                android:gravity="center"
                android:textSize="14sp"
                android:text="可以先关注Ta"
                android:layout_alignBottom="@+id/bg_image"
                android:layout_alignLeft="@+id/bg_image"
                android:layout_alignRight="@+id/bg_image"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/shape_btn_first_concern"/>
        </RelativeLayout>

        <ImageButton
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:src="@drawable/btn_cancle_white"
            android:layout_marginTop="26dp"/>
    </LinearLayout>
</LinearLayout>