<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="10dp">

        <com.dfsx.core.common.view.CircleButton
            android:id="@+id/item_user_logo_image"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:src="@drawable/icon_user_default_logo"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@+id/item_user_logo_image">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_user_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/public_purple_bkg"
                    android:text="哈哈"/>

                <TextView
                    android:id="@+id/item_chat_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/item_user_name_text"
                    android:layout_alignBottom="@+id/item_user_name_text"
                    android:textSize="11dp"
                    android:textColor="#adadad"
                    android:text="哈哈"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/item_chat_content_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@drawable/shape_bg_chat_content_no_current"
                android:text="哈哈哈哈哈哈哈"
                android:padding="7dp"
                android:textSize="16dp"
                android:textColor="@color/black"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>