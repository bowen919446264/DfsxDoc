<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#33000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:paddingBottom="20dp"
            android:background="@drawable/shape_live_alert">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#fc9e2a"
                android:text="乐山城事直播协议"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@color/gray_a9"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/live_alert_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="#343434"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:text="111111111111111111111111111"/>
                </LinearLayout>
            </ScrollView>

            <CheckBox
                android:id="@+id/check_agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_marginTop="5dp"
                android:text="同意直播协议"
                android:button="@null"
                android:drawableLeft="@drawable/check_live_alert_agree"
                android:drawablePadding="5dp"
                android:textSize="14sp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/gray_a9"/>

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:text="确定"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/shape_live_alert_btn"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>