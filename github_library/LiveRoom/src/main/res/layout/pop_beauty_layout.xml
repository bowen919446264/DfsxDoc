<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="138dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="138dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#40000000">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="选择合适你的磨皮程度吧~"
                android:padding="12dp"
                android:textColor="#fbd42d"
                android:textSize="15sp"/>

            <LinearLayout
                android:id="@+id/level_group_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingBottom="30dp"
                android:gravity="center"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/level_0"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:button="@null"
                    android:background="@drawable/beaty_face_level"
                    android:layout_marginLeft="10dp"
                    android:checked="true"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="0"
                    android:textColor="#3c3b4a"/>

                <CheckedTextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:checked="false"
                    android:background="@drawable/beauty_level_line"/>

                <CheckBox
                    android:id="@+id/level_1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:button="@null"
                    android:background="@drawable/beaty_face_level"
                    android:layout_weight="0"
                    android:checked="false"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="1"
                    android:textColor="#3c3b4a"/>

                <CheckedTextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:checked="false"
                    android:background="@drawable/beauty_level_line"/>

                <CheckBox
                    android:id="@+id/level_2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:button="@null"
                    android:background="@drawable/beaty_face_level"
                    android:checked="false"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="2"
                    android:textColor="#3c3b4a"/>

                <CheckedTextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:checked="false"
                    android:background="@drawable/beauty_level_line"/>

                <CheckBox
                    android:id="@+id/level_3"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_weight="0"
                    android:button="@null"
                    android:background="@drawable/beaty_face_level"
                    android:checked="true"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="3"
                    android:textColor="#3c3b4a"/>

                <CheckedTextView
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:checked="false"
                    android:background="@drawable/beauty_level_line"/>

                <CheckBox
                    android:id="@+id/level_4"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_weight="0"
                    android:button="@null"
                    android:background="@drawable/beaty_face_level"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="4"
                    android:textColor="#3c3b4a"
                    android:checked="false"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/pop_angle"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:src="@drawable/icon_beauty_angle"/>
    </LinearLayout>
</RelativeLayout>