<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/user_come_bkg_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_live_user_come">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1111"
                android:textSize="15dp"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/user_come_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/user_name"
                android:text="进入房间"
                android:textSize="15dp"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/user_grade_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_alignTop="@+id/user_come_bkg_container"
            android:layout_alignBottom="@+id/user_come_bkg_container"
            android:textSize="13dp"
            android:text="欢  迎"/>
    </RelativeLayout>
</LinearLayout>