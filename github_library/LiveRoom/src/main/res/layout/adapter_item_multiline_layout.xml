<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/item_multiline_view"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_multiline_selected">

        <TextView
            android:id="@+id/item_multiline_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.LightFont"
            android:textSize="12dp"
            android:text="线路1"/>

        <TextView
            android:id="@+id/item_multiline_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.LightFont"
            android:layout_marginTop="5dp"
            android:textSize="12dp"
            android:text="hahahahah"/>
    </LinearLayout>
</LinearLayout>