<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/circle_1">
        <shape android:shape="oval">

            <solid android:color="@color/transparent"/>

            <stroke
                android:color="#fbd42d"
                android:width="4px"/>

            <size
                android:width="40dp"
                android:height="40dp"/>
        </shape>
    </item>
    <item
        android:id="@+id/circle_2"
        android:gravity="center"
        android:top="5dp"
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp">
        <shape android:shape="oval">

            <solid android:color="#fbd42d"/>

            <size
                android:width="30dp"
                android:height="30dp"/>
        </shape>
    </item>
</layer-list>